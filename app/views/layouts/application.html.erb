<!DOCTYPE html>
<html>
  <head>
    <title>TagTrip38192</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to "TAG-TRIP", root_path, class: :logo %>
            
          </div>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to "新規投稿", new_tweet_path, class: :nav__btn %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
            </div>
          <% else %>
            <div class="nav__right">
              <%= link_to "Facebookで登録", user_facebook_omniauth_authorize_path, class: :nav__btn , method: :post%>
              <%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, class: :nav__btn , method: :post%>
              <%= link_to "新規登録(メールアドレスで登録)", new_user_registration_path, class: :nav__btn %>
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © Tag Trip All rights reserved.</p>
    </footer>
  </body>
</html>
