<%= form_with model: @tweet, local: true do |f|%>
<%# render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :place, "場所" %><br />
    <%= f.text_field :place %>
  </div>

  <div class="field">
    <%= f.label :introduction, "イントロダクション" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="image-field">
    <div id="previews"></div>
    <%= f.label :image, "プロトタイプの画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>