<%= form_with model: @tweet, local: true do |f|%>
<%# render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, class:"form-input", autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :place, "場所" %><br />
    <%= f.text_field :place, class:"form-input", autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :introduction, "イントロダクション" %><br />
    <%= f.text_area :introduction, class:"form-input", autocomplete: "new-password" %>
  </div>
  <div class="image-field">
    <div id="previews"></div>
    <%= f.label :image, "プロトタイプの画像" %><br />
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit :"投稿する", class:"tweet-btn" %>
  </div>
<% end %>